<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sorbellini.s214631.lab3">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Base">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowOfferDetails"
            android:label="@string/title_show_offer_details"
            android:parentActivityName=".ActivityMain"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sorbellini.s214631.lab3.ActivityMain" />
        </activity>
        <activity
            android:name=".ShowReservationDetails"
            android:label="@string/title_show_reservation_details"
            android:parentActivityName=".ActivityMain"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sorbellini.s214631.lab3.ActivityMain" />
        </activity>
        <activity
            android:name=".ActivityRestaurantProfile"
            android:label="Restaurant Profile"
            android:parentActivityName=".ActivityMain"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sorbellini.s214631.lab3.ActivityMain" />
        </activity>
        <activity
            android:name=".CustomerProfile"
            android:label="Profile"
            android:parentActivityName=".ActivityMain"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sorbellini.s214631.lab3.ActivityMain" />
        </activity>
        <activity
            android:name=".ModifyCustomerProfile"
            android:label="Modify Your Profile"
            android:parentActivityName=".CustomerProfile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Base">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CustomerProfile" />

        </activity>
    </application>

</manifest>