<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/offer_card"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/offer_card_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/pizza"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="8dp">
                <TextView
                    android:id="@+id/offer_card_restaurant_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="Restaurant"
                    android:textSize="20sp"
                    android:textColor="@color/dark_text_color"
                    />
                <TextView
                    android:id="@+id/offer_card_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/offer_card_restaurant_title"
                    android:text="Restaurant Name"
                    android:textSize="16sp"
                    android:textColor="@color/dark_text_color"
                    />
                <TextView
                    android:id="@+id/offer_card_offer_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/offer_card_restaurant"
                    android:layout_marginTop="4dp"
                    android:text="Offer"
                    android:textSize="20sp"
                    android:textColor="@color/dark_text_color"
                    />
                <TextView
                    android:id="@+id/offer_card_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/offer_card_offer_title"
                    android:text="Offer Name"
                    android:textSize="16sp"
                    android:textColor="@color/dark_text_color"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/offer_card_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Price"
                        android:textSize="20sp"
                        android:textColor="@color/dark_text_color"
                        />
                    <TextView
                        android:id="@+id/offer_card_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/offer_card_price_title"
                        android:text="10â‚¬"
                        android:textSize="16sp"
                        android:textColor="@color/dark_text_color"
                        />
                    <TextView
                        android:id="@+id/offer_card_distance_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="Distance"
                        android:textSize="20sp"
                        android:textColor="@color/dark_text_color"
                        />
                    <TextView
                        android:id="@+id/offer_card_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/offer_card_distance_title"
                        android:text="100Km"
                        android:textSize="16sp"
                        android:textColor="@color/dark_text_color"
                        />

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
